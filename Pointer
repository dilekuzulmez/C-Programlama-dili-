#include <stdio.h>
#include <stdlib.h>

int main()
{
  int a,*xptr;

  a=42;
  xptr=&a; //xptr ye a'nın adresi atandı.

  printf("a'nin adresi %p\nxptr degiskeninin degeri %p",&a,xptr);
  printf("\n\na'nin degeri %d\n*xptr degiskenin degeri %d",a,*xptr);
  printf("\n\n* ve & birbirlerinin eslenigidir.\n&*xptr=%p\n*&xptr=%p\n",&*xptr,*&xptr);

  return 0;
}
